#include <iostream>
using namespace std;

int main(void) {
    int number;
    do {
        cout << "請輸入高度?";
        cin >> number;
       } while (number < 1 || number > 8);
       for(int i = 0; i < number;i++) {
           for (int j = 0; j <= i;j++) {
                cout << "#";
           }
           cout << "\n";
       }      
}// 272 31 陳麒元 655327
